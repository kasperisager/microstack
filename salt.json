{
  "variables": {
    "token": "",
    "region": "",
    "size": "",
    "image": ""
  },
  "builders": [
    {
      "type": "digitalocean",
      "api_token": "{{user `token`}}",
      "image": "{{user `image`}}",
      "region": "{{user `region`}}",
      "size": "{{user `size`}}",
      "snapshot_name": "salt-{{uuid}}"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "curl -L https://bootstrap.saltstack.com | sh"
      ]
    }
  ]
}
