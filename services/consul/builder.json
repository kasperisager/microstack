{
  "variables": {
    "token": "",
    "region": "",
    "size": ""
  },
  "builders": [
    {
      "type": "digitalocean",
      "api_token": "{{user `token`}}",
      "image": "ubuntu-16-04-x64",
      "region": "{{user `region`}}",
      "size": "{{user `size`}}",
      "snapshot_name": "consul-{{uuid}}"
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "{{template_dir}}/config",
      "destination": "/tmp"
    },
    {
      "type": "salt-masterless",
      "local_state_tree": "{{template_dir}}/states",
      "disable_sudo": true
    }
  ]
}
