{
  "variables": {
    "token": "",
    "region": "",
    "size": "s-1vcpu-1gb",
    "image": ""
  },
  "builders": [
    {
      "type": "digitalocean",
      "api_token": "{{user `token`}}",
      "image": "{{user `image`}}",
      "region": "{{user `region`}}",
      "size": "{{user `size`}}",
      "snapshot_name": "nomad-{{uuid}}",
      "ssh_username": "root"
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "{{template_dir}}/config",
      "destination": "/tmp"
    },
    {
      "type": "salt-masterless",
      "local_state_tree": "{{template_dir}}/states",
      "log_level": "error",
      "skip_bootstrap": true
    }
  ]
}
